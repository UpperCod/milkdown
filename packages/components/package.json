{
  "name": "@milkdown/components",
  "type": "module",
  "version": "7.3.2",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Milkdown/milkdown.git",
    "directory": "packages/components"
  },
  "keywords": [
    "milkdown",
    "milkdown plugin"
  ],
  "sideEffects": false,
  "files": [
    "lib",
    "src"
  ],
  "scripts": {
    "start": "library \"src/**/*\" --watch",
    "test": "vitest",
    "tsc": "tsc --noEmit && echo",
    "build": "library \"src/**/*\"",
    "exports": "exports \"types/**/*\" \"lib/**/*\""
  },
  "peerDependencies": {
    "@codemirror/language": "^6",
    "@codemirror/state": "^6",
    "@codemirror/view": "^6",
    "@milkdown/core": "^7.2.0",
    "@milkdown/ctx": "^7.2.0",
    "@milkdown/plugin-tooltip": "^7.2.0",
    "@milkdown/preset-commonmark": "^7.2.0",
    "@milkdown/prose": "^7.2.0",
    "@milkdown/transformer": "^7.2.0"
  },
  "dependencies": {
    "@atomico/hooks": "^3.50.2",
    "@floating-ui/dom": "^1.5.1",
    "@milkdown/exception": "workspace:*",
    "@milkdown/utils": "workspace:*",
    "@types/lodash.debounce": "^4.0.7",
    "atomico": "^1.75.0",
    "clsx": "^2.0.0",
    "lodash.debounce": "^4.0.8",
    "tslib": "^2.5.0",
    "unist-util-visit": "^5.0.0"
  },
  "devDependencies": {
    "@atomico/exports": "^1.13.0",
    "@atomico/vite": "^2.16.0",
    "@codemirror/language": "^6.9.0",
    "@codemirror/state": "^6.2.1",
    "@codemirror/view": "^6.16.0",
    "@milkdown/core": "workspace:*",
    "@milkdown/ctx": "workspace:*",
    "@milkdown/plugin-tooltip": "workspace:*",
    "@milkdown/preset-commonmark": "workspace:*",
    "@milkdown/prose": "workspace:*",
    "@milkdown/transformer": "workspace:*"
  },
  "nx": {
    "targets": {
      "build": {
        "outputs": [
          "{projectRoot}/lib"
        ],
        "dependsOn": [
          {
            "target": "build",
            "projects": "dependencies"
          }
        ]
      },
      "tsc": {
        "outputs": [],
        "dependsOn": [
          {
            "target": "build",
            "projects": "dependencies"
          }
        ]
      }
    }
  }
}
